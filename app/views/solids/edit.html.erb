  <div class="form-inputs">
    <%= f.input :male_expected_age, label: 'Expectativa de Vida Masculina(anos)', error: 'EA(males) is mandatory, please specify one' %>
    <%= f.input :female_expected_age, label: 'Expectativa de Vida Feminina(anos)', error: 'EA(females) is mandatory, please specify one' %>
    <%= f.input :incidence, label: 'NÃºmero de casos(casos/100.000 habitantes)', error: 'Number of cases per 100.000 inhabitants' %>
  </div>

  <div class="btn btn-grad">
    <%= f.button :submit, 'Enviar' %>
  </div>
<% end %>

