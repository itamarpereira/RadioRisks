          </div>
          <div class="card" >
            <h4>50 anos</h4>
            <p><%= @cinquenta_female.round %></p>
          </div>
        </div>
      </div>
    </div>
  <% end %>
  <%= link_to 'LLER', edit_solid_path(@solid), class: "btn btn-grad" %>
