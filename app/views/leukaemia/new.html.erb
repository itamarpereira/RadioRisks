<h1>Leukaemia Model</h1>

<%= simple_form_for(@leukaemium) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :dose, label: 'Dose(Sv)', error: 'Dose value must be between 0.1 Sv and 3.99 Sv' %>
    <%= f.input :exposure, label: 'Age at exposure', error: 'Age at exposure is mandatory' %>
    <%= f.input :diagnostic, label: 'Age at diagnosis', error: 'Age at diagnosis is mandatory' %>
  </div>

  <div class="btn btn-grad">
    <%= f.button :submit %>
  </div>
<% end %>

<%= link_to 'Back', root_path, class: "btn btn-blue" %>